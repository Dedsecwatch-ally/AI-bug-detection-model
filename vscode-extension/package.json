{
  "name": "ai-bug-fixer-vscode",
  "displayName": "AI Bug Fixer",
  "description": "Send code to local AI Bug Finder backend and view reviews inside VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:aiBugFixer.reviewCode"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npx esbuild src/extension.js --bundle --platform=node --outfile=out/extension.js --target=node16 --external:vscode",
    "watch": "npx esbuild src/extension.js --bundle --platform=node --outfile=out/extension.js --target=node16 --external:vscode --watch",
    "package": "npx vsce package --yarn false"
  },
  "dependencies": {
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "esbuild": "^0.18.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "aiBugFixer.reviewCode",
        "title": "AI Bug Fixer: Review Code"
      }
    ]
    ,
    "configuration": {
      "type": "object",
      "title": "AI Bug Fixer",
      "properties": {
        "aiBugFixer.apiUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Local backend URL for AI Bug Finder"
        }
      }
    }
  }
}
